.post
  .post-header
    %h3.post-title<
      %a{ href: post.url }= post[:title]
    %p.post-meta>
      = l post.created_at, :human
      %small= t.post.published_in(post.linked_tags)
  .post-content
    = post.content_html
  - if admin?
    .post-edit
      %a.btn{ href: "#{post.url + 'edit'}" }= t.post.edit
- if Blog.disqus_shortname
  #disqus_thread
  %script{ src: "http://disqus.com/forums/#{Blog.disqus_shortname}/embed.js", type: "text/javascript" }
  %noscript
    %a{ href: "http://#{Blog.disqus_shortname}.disqus.com/?url=ref" } View the discussion thread.
  %a.dsq-brlink{ href: 'http://disqus.com' }
    Blog comments powered by
    %span.logo-disqus Disqus