.page-header
  %h1
    Posts tagged
    %span.tagged= tag
    -# TODO: Add size of Posts array?
.row-fluid
  .span10
    - posts.each do |post|
      .post
        .post-header
          %h2.post-title
            %a{href: post.url}= post[:title]
          %p.post-meta
          -# TODO: Add localized Post date?
            = post.show_create_at
            \&nbsp;|&nbsp;
            %small Posted in
            = post.linked_tags
            - if Blog.disqus_shortname
              \&nbsp;|&nbsp;
              %a{href: "#{post.url}#disqus_thread"} comments
        .post-content
          = post.summary_html
        - if post.more?
          .post-more
            %a{href: post.url} Continue reading &raquo;
    = paginate(posts, tag: tag)
